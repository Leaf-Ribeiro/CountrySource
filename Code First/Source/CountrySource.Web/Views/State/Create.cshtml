@model CountrySource.Web.ViewModels.States.StateCreateViewModel

@{
    ViewBag.Title = "Create";
}

@section scripts{
    <script>
        function createState(control) {
            postForm(control, function (data) {
                if (data.Success) {
                    alert(data.Message);
                    window.location.href = "@Url.Action("List")";
                }
            });

            return false;
        }
    </script>
    }

<h2>Criar Estado</h2>

<section>
    @using (Html.BeginForm("Create", "State", FormMethod.Post, new { }))
    {
        @Html.ValidationSummary()

        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label>Nome:</label>
                    @Html.TextBoxFor(a => a.Name, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    Pais:
                    @Html.DropDownListFor(a => a.CountryId, new SelectList(Model.Countries, "Id", "Name"), "(Selecione)", new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="btnp-group">
                <button class="btn btn-primary" onclick="createState(this);">Salvar</button>
                <button type="reset" class="btn btn-default" onclick="window.location.href='@Url.Action("List")'">Cancelar</button>
            </div>
        </div>
    }

</section>