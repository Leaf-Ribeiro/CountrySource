@model CountrySource.Web.ViewModels.Countries.CountryDetailViewModel

@{
    ViewBag.Title = "Detail";
}


<h2>Detalhe Pais</h2>

<section>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(a => a.Name)
                @Html.TextBoxFor(a => a.Name, new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(a => a.Continent)
                @Html.TextBoxFor(a => a.Continent, new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>
    </div>
    <hr/>
    <h3>Estados:</h3>
    @for (var i = 0; i < Model.States.Count; i += 4)
    {
        <div class="row">
            @foreach (var item in Model.States.Skip(i).Take(4))
            {
                <div class="col-md-3">
                    <div class="form-group">
                        <span>@item.Name</span>

                    </div>
                </div>
            }
        </div>
    }

    <div class="row">
        <div class="btnp-group">
            <button type="reset" class="btn btn-default" onclick="window.location.href='@Url.Action("List")'">Voltar</button>
        </div>
    </div>
</section>